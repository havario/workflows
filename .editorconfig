# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{go,mk},*[Mm]akefile*}]
indent_style = tab
indent_size = 4

[{*.{awk,c,cpp,h,java,lua,php,pl,py,sh},*[Dd]ockerfile*}]
indent_style = space
indent_size = 4

[*.{css,html,js,json,ts,xml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
