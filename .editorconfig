# https://editorconfig.org

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{c,go,h,mk},Makefile,Makefile.*}]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4

[*.{awk,lua,php,pl,py,sh}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.{css,html,js,json,ts,yaml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.bat]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf

[*.ps1]
charset = utf-8-bom
indent_style = space
indent_size = 4
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
