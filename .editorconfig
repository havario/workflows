# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[{*.mk,Makefile,Makefile.*}]
indent_style = tab
indent_size = 4

[*.{pl,py,sh}]
indent_size = 4

[*.{json,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
