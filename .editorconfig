# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{go,mk},Makefile,Makefile.*}]
indent_style = tab
indent_size = 4

[*.{lua,php,pl,py,sh}]
indent_style = space
indent_size = 4

[*.{css,html,js,json,ts,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
